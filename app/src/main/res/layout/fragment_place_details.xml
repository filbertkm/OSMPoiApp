<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.filbertkm.osmapp.ui.activity.PlaceDetailsActivity$PlaceholderFragment">

    <TextView
        android:id="@+id/place_details_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/AppThemeListItemMainText"
        tools:text="Place name" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/place_details_type"
        android:layout_below="@+id/place_details_name"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        style="@style/AppThemeListItemSubText"
        tools:text="Place type" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/place_details_tags"
        android:layout_below="@+id/place_details_type"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp" />

</RelativeLayout>
