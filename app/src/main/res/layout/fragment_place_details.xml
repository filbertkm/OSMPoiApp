<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.filbertkm.osmapp.ui.activity.PlaceDetailsActivity$PlaceholderFragment">

    <RelativeLayout
        android:id="@+id/place_details_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ff3f51b5"
        android:paddingTop="16dp"
        android:paddingBottom="16dp">

        <TextView
            android:id="@+id/place_details_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:textColor="#ffffffff"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:text="Place name" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/place_details_type"
            android:layout_below="@+id/place_details_name"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            android:textColor="#ffffffff"
            android:textSize="16sp"
            tools:text="Place type" />

    </RelativeLayout>

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/place_details_tags"
        android:layout_below="@+id/place_details_header"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#ffffffff">

        <Button
            android:id="@+id/place_details_add_tag_button"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/place_details_tags"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:text="Add tag" />

    </FrameLayout>

</RelativeLayout>