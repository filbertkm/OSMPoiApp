<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.filbertkm.osmapp.ui.activity.EditTagActivity$PlaceholderFragment">

    <TextView
        android:id="@+id/edit_tag_place_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/AppThemeListItemMainText"
        tools:text="Place name" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edit_tag_place_type"
        android:layout_below="@+id/edit_tag_place_name"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        style="@style/AppThemeListItemSubText"
        tools:text="Place type" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edit_tag_key"
        android:layout_below="@+id/edit_tag_place_type"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        style="@style/AppThemeListItemMainText"
        tools:text="Tag key" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edit_tag_value"
        android:layout_below="@+id/edit_tag_key"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        style="@style/AppThemeListItemMainText"
        tools:text="Tag value" />


</RelativeLayout>
